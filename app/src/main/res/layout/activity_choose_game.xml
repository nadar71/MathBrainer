<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.indiewalkabout.mathbrainer.ChooseGameActivity">


    <Button
        android:id="@+id/ResultWriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="+ - * /  ___"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/resultWriteStatsText"
        android:layout_width="146dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/resultwritestatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/ResultWriteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ResultWriteBtn"
        app:layout_constraintTop_toBottomOf="@+id/ResultWriteBtn"
        app:layout_constraintVertical_bias="0.339" />

    <Button
        android:id="@+id/ResultChooseBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="+-*/   _?_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResultWriteBtn" />

    <TextView
        android:id="@+id/resultChooseStatsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@string/resultchoosestatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/ResultChooseBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ResultChooseBtn"
        app:layout_constraintTop_toBottomOf="@+id/ResultChooseBtn"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/quickCountBtn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/quick_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/countStatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/countstatsvalues"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/doublingBtn"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="2*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickCountBtn" />

    <TextView
        android:id="@+id/doublingStatsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:text="@string/doublingstatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/doublingBtn"
        app:layout_constraintStart_toEndOf="@+id/doublingBtn"
        app:layout_constraintTop_toBottomOf="@+id/doublingBtn"
        app:layout_constraintVertical_bias="0.481" />

    <Button
        android:id="@+id/fallingBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/falling_ops"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doublingBtn" />

    <TextView
        android:id="@+id/fallingStatsText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:text="@string/fallingstatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/fallingBtn"
        app:layout_constraintStart_toEndOf="@+id/fallingBtn"
        app:layout_constraintTop_toBottomOf="@+id/fallingBtn"
        app:layout_constraintVertical_bias="0.48" />

    <Button
        android:id="@+id/orderBtn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/numbers_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallingBtn" />

    <TextView
        android:id="@+id/numberOrderStatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:text="@string/numberorderstatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/orderBtn"
        app:layout_constraintStart_toEndOf="@+id/orderBtn"
        app:layout_constraintTop_toBottomOf="@+id/orderBtn"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/randomOpsBtn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/random_ops"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderBtn" />

    <TextView
        android:id="@+id/randomOpsStatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:text="@string/randomopsstatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/randomOpsBtn"
        app:layout_constraintStart_toEndOf="@+id/randomOpsBtn"
        app:layout_constraintTop_toBottomOf="@+id/randomOpsBtn"
        app:layout_constraintVertical_bias="0.49" />

    <Button
        android:id="@+id/soundsSeqBtn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/sounds_sequence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomOpsBtn" />

    <TextView
        android:id="@+id/soundSeqStatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="@string/soundseqstatsvalues"
        app:layout_constraintBottom_toTopOf="@+id/soundsSeqBtn"
        app:layout_constraintStart_toEndOf="@+id/soundsSeqBtn"
        app:layout_constraintTop_toBottomOf="@+id/soundsSeqBtn"
        app:layout_constraintVertical_bias="0.509" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResultChooseBtn" />

    <Button
        android:id="@+id/button2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.538" />

    <Button
        android:id="@+id/button3"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.538" />

    <Button
        android:id="@+id/button4"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintVertical_bias="0.538" />
</android.support.constraint.ConstraintLayout>
